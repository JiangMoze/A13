<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.weikun.pojo.Father" table="father" schema="test">
        <id name="fid">
            <column name="fid" sql-type="int(11)"/>
        </id>
        <property name="fname">
            <column name="fname" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <set name="son" inverse="true" >
            <key>
                <column name="fid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.weikun.pojo.Son"/>
        </set>
    </class>
</hibernate-mapping>